{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1", "sfo1"],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Nemurium",
    "NEXT_PUBLIC_APP_URL": "https://nemurium.vercel.app"
  }
}